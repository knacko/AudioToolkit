<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape>
            <solid android:color="#77000000" />

            <corners android:radius="5dp" />

            <stroke
                android:width="3dp"
                android:color="#00424344" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerY="0"
                android:endColor="#FF5a5a5a"
                android:startColor="#FF252525" />

            <corners android:radius="4dp" />

            <stroke
                android:width="6dp"
                android:color="#00424344" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:angle="270"
                android:centerY="0"
                android:endColor="#FF474747"
                android:startColor="#FF2d2d2d" />

            <corners android:radius="3dp" />

            <stroke
                android:width="8dp"
                android:color="#00424344" />
        </shape>
    </item>

</layer-list>