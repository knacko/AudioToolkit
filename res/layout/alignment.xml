<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#77ff0000"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="3.5"
        android:text=" Speaker Alignment"
        android:textColor="#ffffffff"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/adspace"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
    android:orientation="vertical"
        android:layout_alignParentBottom="true" />

    <ScrollView
        android:id="@+id/ewrwewer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/adspace"
        android:layout_below="@+id/title"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/e3wrwewer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/spl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0.0"
                android:textSize="100sp" />

            <TableRow
                android:id="@+id/widget49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/widget8y6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max SPL: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/splmax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:id="@+id/widget49"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/widget8y6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avg SPL: "
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/splavg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0"
                    android:textSize="20sp" />
            </TableRow>

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TableRow
                    android:id="@+id/widget49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp" />

                    <Button
                        android:id="@+id/onoff"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Start"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="1dp" />
                </TableRow>

                <TableRow
                    android:id="@+id/widget49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/senseminus"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="&lt;"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/spl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Sensitivity"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/senseplus"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textStyle="bold" />
                </TableRow>

                <TableRow
                    android:id="@+id/widget49"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal" >

                    <Button
                        android:id="@+id/spl_updateminus"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text="&lt;"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/spl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="  Update Rate  "
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/spl_updateplus"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:text=">"
                        android:textStyle="bold" />
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>